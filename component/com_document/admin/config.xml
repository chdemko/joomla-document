<?xml version="1.0" encoding="utf-8"?>
<config>
<fieldset
                name="greetings"
                label="COM_DOCUMENT_CONFIG_GREETING_SETTINGS_LABEL"
                description="COM_DOCUMENT_CONFIG_GREETING_SETTINGS_DESC"
        >
                <field
                        name="show_category"
                        type="radio"
                        label="COM_DOCUMENT_DOCUMENT_FIELD_SHOW_CATEGORY_LABEL"
                        description="COM_DOCUMENT_DOCUMENT_FIELD_SHOW_CATEGORY_DESC"
                        default="0"
                >
                        <option value="0">JHIDE</option>
                        <option value="1">JSHOW</option>
                </field>
        </fieldset>
        <fieldset
                name="permissions"
                label="JCONFIG_PERMISSIONS_LABEL"
                description="JCONFIG_PERMISSIONS_DESC"
        >
                <field
                        name="rules"
                        type="rules"
                        label="JCONFIG_PERMISSIONS_LABEL"
                        class="inputbox"
                        validate="rules"
                        filter="rules"
                        component="com_document"
                        section="component"
                />
        </fieldset>
	<fieldset name="component">
		<field
			name="upload_extensions"
			type="text"
			size="50"
			default="bmp,csv,doc,gif,ico,jpg,jpeg,odg,odp,ods,odt,pdf,png,ppt,swf,txt,xcf,xls,BMP,CSV,DOC,GIF,ICO,JPG,JPEG,ODG,ODP,ODS,ODT,PDF,PNG,PPT,SWF,TXT,XCF,XLS"
			label="COM_DOCUMENT_FIELD_LEGAL_EXTENSIONS_LABEL"
			description="COM_DOCUMENT_FIELD_LEGAL_EXTENSIONS_DESC" />

		<field
			name="upload_maxsize"
			type="text"
			size="50"
			default="10"
			label="COM_DOCUMENT_FIELD_MAXIMUM_SIZE_LABEL"
			description="COM_DOCUMENT_FIELD_MAXIMUM_SIZE_DESC" />

		<field
			name="ignore_extensions"
			type="text"
			size="50"
			label="COM_DOCUMENT_FIELD_IGNORED_EXTENSIONS_LABEL"
			description="COM_DOCUMENT_FIELD_IGNORED_EXTENSIONS_DESC" />

		<field
			name="upload_mime"
			type="text"
			size="50"
			default="image/jpeg,image/gif,image/png,image/bmp,application/x-shockwave-flash,application/msword,application/excel,application/pdf,application/powerpoint,text/plain,application/x-zip"
			label="COM_DOCUMENT_FIELD_LEGAL_MIME_TYPES_LABEL"
			description="COM_DOCUMENT_FIELD_LEGAL_MIME_TYPES_DESC" />

		<field
			name="upload_mime_illegal"
			type="text"
			size="50"
			default="text/html"
			label="COM_DOCUMENT_FIELD_ILLEGAL_MIME_TYPES_LABEL"
			description="COM_DOCUMENT_FIELD_ILLEGAL_MIME_TYPES_DESC" />

	</fieldset>

</config>

