<?xml version="1.0" encoding="utf-8"?>
<!-- $Id$ -->
<extension type="component" version="1.6.0" method="upgrade">

	<name>COM_DOCUMENT</name>
	<!-- The following elements are optional and free of formatting conttraints -->
	<creationDate>December 2010</creationDate>
	<copyright>Copyright (C) 2010 - today Master ICONE, University of La Rochelle, France.</copyright>
	<authorEmail>document@chdemko.com</authorEmail>
	<authorUrl>www.chdemko.com</authorUrl>
	<license>License GNU General Public License version 2 or later</license>
	<!--  The version string is recorded in the components table -->
	<version>0.0.1</version>
	<!-- The description is optional and defaults to the name -->
	<description>COM_DOCUMENT_DESCRIPTION</description>

	<!-- Runs on install/uninstall/update; New in 1.6 -->
	<scriptfile>script.php</scriptfile>

	<install> <!-- Runs on install -->
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>
	<uninstall> <!-- Runs on uninstall -->
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>
	<update> <!-- Runs on update; New in 1.6 -->
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
		</schemas>
	</update>

	<!-- Site Main File Copy Section -->
	<!-- Note the folder attribute: This attribute describes the folder
		to copy FROM in the package to install therefore files copied
		in this section are copied from /site/ in the package -->
	<files folder="site">
		<filename>index.html</filename>
		<filename>document.php</filename>
		<filename>controller.php</filename>
		<filename>helpers.php</filename>
		<folder>views</folder>
		<folder>models</folder>
		<folder>helpers</folder>
	</files>

	<languages folder="site">
		<language tag="en-GB">language/en-GB/en-GB.com_document.ini</language>
		<language tag="fr-FR">language/fr-FR/fr-FR.com_document.ini</language>
	</languages>

	<media destination="com_document" folder="media">
		<filename>index.html</filename>
		<folder>images</folder>
	</media>

	<administration>
		<!-- Administration Menu Section -->
		<menu img="../media/com_document/images/document-16x16.png">COM_DOCUMENT_MENU</menu>
		<submenu>
			<!--
				Note that all & must be escaped to &amp; for the file to be valid
				XML and be parsed by the installer
			-->
			<menu link="index.php?option=com_document" view="documents" img="../media/com_document/images/document-16x16.png"
				alt="Document/Documents">COM_DOCUMENT_MENU</menu>
			<menu link="index.php?option=com_categories&amp;extension=com_document"
				view="categories" img="../media/com_document/images/document-categories-16x16.png" alt="Document/Categories">COM_DOCUMENT_CATEGORIES_MENU
			</menu>
			<menu link="index.php?option=com_media&amp;folder=documents"
				img="class:media" alt="Document/Media">COM_DOCUMENT_MEDIA_MENU</menu>
		</submenu>
		<!-- Administration Main File Copy Section -->
		<!-- Note the folder attribute: This attribute describes the folder
			to copy FROM in the package to install therefore files copied
			in this section are copied from /admin/ in the package -->
		<files folder="admin">
			<!-- Admin Main File Copy Section -->
			<filename>index.html</filename>
			<filename>config.xml</filename>
			<filename>access.xml</filename>
			<filename>document.php</filename>
			<filename>controller.php</filename>
			<filename>helpers.php</filename>
			<!-- SQL files section -->
			<folder>sql</folder>
			<!-- tables files section -->
			<folder>tables</folder>
			<!-- models files section -->
			<folder>models</folder>
			<!-- views files section -->
			<folder>views</folder>
			<!-- controllers files section -->
			<folder>controllers</folder>
			<!-- helpers files section -->
			<folder>helpers</folder>
		</files>

		<languages folder="admin">
			<language tag="en-GB">language/en-GB/en-GB.com_document.ini</language>
			<language tag="en-GB">language/en-GB/en-GB.com_document.sys.ini</language>
			<language tag="fr-FR">language/fr-FR/fr-FR.com_document.ini</language>
			<language tag="fr-FR">language/fr-FR/fr-FR.com_document.sys.ini</language>
		</languages>
	</administration>

</extension>

