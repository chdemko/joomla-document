<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="details">
	   <field
		   name="id"
		   type="hidden"
	   />

	   <field
			name="title"
			type="text"
			label="COM_DOCUMENT_FIELD_DOCUMENT_TITLE_LABEL"
			description="COM_DOCUMENT_FIELD_DOCUMENT_TITLE_DESC"
			size="30"
			class="inputbox"
			required="true"
		/>

		<field
			name="alias"
			type="text"
			label="COM_DOCUMENT_FIELD_DOCUMENT_ALIAS_LABEL"
			description="COM_DOCUMENT_FIELD_DOCUMENT_ALIAS_DESC"
			size="45"
			class="inputbox"
		/>		  

		<field
			name="catid"
			type="category"
			label="JCATEGORY"
			description="JFIELD_CATEGORY_DESC"
			extension="com_document"
			class="inputbox"
			multiple="true"
			size="5"
		/>		  

		<field
			name="published"
			type="list"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			class="inputbox"
			filter="intval"
			size="1"
			default="1"
		>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>
		
		<field
			name="access"
			type="accesslevel"
			label="JFIELD_ACCESS_LABEL"
			description="JFIELD_ACCESS_DESC"
			class="inputbox"
			size="1"
		/>

		<field
			name="featured"
			type="list"
			label="COM_DOCUMENT_FIELD_DOCUMENT_FEATURED_LABEL"
			description="COM_DOCUMENT_FIELD_DOCUMENT_FEATURED_DESC"
			default="0"
		>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>

 		<field
 			name="language"
 			type="contentlanguage"
 			label="COM_DOCUMENT_FIELD_DOCUMENT_LANGUAGE_LABEL"
			description="COM_DOCUMENT_FIELD_DOCUMENT_LANGUAGE_DESC"
			class="inputbox"
		>
			<option value="*">JALL</option>
		</field>

 		<field
			name="author"
			type="text"
			label="COM_DOCUMENT_DOCUMENT_FIELD_AUTHOR_LABEL"
			description="COM_DOCUMENT_DOCUMENT_FIELD_AUTHOR_DESC"
			default=""
			class="inputbox"
			required="true"
		/>		  
	
		<field
			name="created"
			type="calendar"
			label="COM_DOCUMENT_DOCUMENT_FIELD_CREATED_LABEL"
			description="COM_DOCUMENT_DOCUMENT_FIELD_CREATED_DESC"
			default=""
			class="inputbox"
			required="true"
		/>		  

		<field
			name="created_by"
			type="text"
			label="COM_DOCUMENT_DOCUMENT_FIELD_CREATED_BY_LABEL"
			description="COM_DOCUMENT_DOCUMENT_FIELD_CREATED_BY_DESC"
			default=""
			class="inputbox"
			required="true"
		/>		  

		<field
			name="modified"
			type="calendar"
			label="COM_DOCUMENT_DOCUMENT_FIELD_MODIFIED_LABEL"
			description="COM_DOCUMENT_DOCUMENT_FIELD_MODIFIED_DESC"
			default=""
			class="inputbox"
			required="true"
		/>		  

		<field
			name="description"
			type="text"
			label="COM_DOCUMENT_DOCUMENT_FIELD_DESCRIPTION_LABEL"
			description="COM_DOCUMENT_DOCUMENT_FIELD_DESCRIPTION_DESC"
			default=""
			class="editor"
			required="true"
		/>			  
</fieldset>

	<fields name="params">
	   <fieldset
		   name="params"
		   label="JGLOBAL_FIELDSET_DISPLAY_OPTIONS"
	   >
		<field
			name="keywords"
			type="text"
			label="COM_DOCUMENT_DOCUMENT_FIELD_KEYWORDS_LABEL"
			description="COM_DOCUMENT_DOCUMENT_FIELD_KEYWORDS_DESC"
			default=""
			class="inputbox"
			required="true"
		/>

		<field
			name="publish_up"
			type="calendar"
			label="COM_DOCUMENT_DOCUMENT_FIELD_PUBLISH_UP_LABEL"
			description="COM_DOCUMENT_DOCUMENT_FIELD_PUBLISH_UP_DESC"
			default=""
			class="inputbox"
			required="true"
		/>		  

		<field
			name="publish_down"
			type="calendar"
			label="COM_DOCUMENT_DOCUMENT_FIELD_PUBLISH_DOWN_LABEL"
			description="COM_DOCUMENT_DOCUMENT_FIELD_PUBLISH_DOWN_DESC"
			default=""
			class="inputbox"
			required="true"
		/>
	   </fieldset>
	</fields>
</form>
